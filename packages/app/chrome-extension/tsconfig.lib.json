{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": false,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2022", "dom", "webworker"],
    "types": ["node", "chrome"],
    "paths": {
      "@hamlog/gemini-client": ["../../lib/gemini-client/src/index.ts"],
      "@hamlog/core": ["../../lib/core/src/index.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "references": [
    {
      "path": "../../lib/gemini-client/tsconfig.lib.json"
    }
  ],
  "exclude": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx"
  ]
}
